<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title><%= title %> - Microblog</title>
	<link rel="stylesheet" href="/stylesheets/style.css">
	<link rel="stylesheet" href="/stylesheets/bootstrap.css">
	<style>
	body{
		padding-top: 60px;
		padding-bottom: 40px;
	}
	</style>
	<link rel="stylesheet" href="/stylesheets/bootstrap-theme.css">
</head>
<body>
	<div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
		<div class="container">
			<a class="btn navbar-toggle" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>
			<a href="/" class="navbar-brand">Microblog</a>
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav">
					<li class="active"><a href="/">首页</a></li>
					<% if(!locals.user){ %>
						<li><a href="/login">登录</a></li>
						<li><a href="/reg">注册</a></li>
					<% } else { %>
						<li><a href="/u/<%= locals.user.name %>"><%= locals.user.name %></a></li>
						<li><a href="/logout">登出</a></li>
					<% } %>
				</ul>
			</div>
		</div>
	</div>
	<div id="container" class="container">
		<% if(locals.success){ %>
			<div class="alert alert-success alert-dismissable">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<%= locals.success %>
			</div>
		<% } %>
		<% if(locals.error){ %>
			<div class="alert alert-danger alert-dismissable">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<%= locals.error %>
			</div>
		<% } %>
		<%- body %>
		<footer class='border-top'>
			<p class="text-center"><a href="http://www.xiaoyunxiao.cn" target="_blank">xiaoyy</a> 2014</p>
		</footer>
	</div>
	<script src="/javascripts/jquery.js"></script>
	<script src="/javascripts/bootstrap.js"></script>
</body>
</html>