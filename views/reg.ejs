<form class="form-horizontal" method="post">
	<fieldset>
		<legend>用户注册</legend>
		<div class="form-group">
			<label for="username" class="control-label col-sm-2">用户名</label>
			<div class="col-sm-4">
				<input type="text" class="form-control" name="username">
				<p class="help-block">你的账户名称用于登陆和显示</p>
			</div>
		</div>
		<div class="form-group">
			<label for="password" class="control-label col-sm-2">口令</label>
			<div class="col-sm-4">
				<input type="password" id="password" class="form-control" name="password">
			</div>
		</div>
		<div class="form-group">
			<label for="password" class="control-label col-sm-2">重复输入口令</label>
			<div class="col-sm-4">
				<input type="password" id="password-repeat" class="form-control" name="password-repeat">
			</div>
		</div>
		<div class="jumbotron">
			<button class="btn btn-primary col-sm-offset-2" type="submit">注册</button>
		</div>
	</fieldset>
</form>